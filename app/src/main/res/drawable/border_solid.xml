<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid background layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color -->
        </shape>
    </item>

    <!-- Border layer -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
